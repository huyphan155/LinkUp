<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LinkUp Adventure" Height="480" Width="680"
        Background="#FFF8E7" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        FontFamily="Georgia, serif">

    <Window.Resources>
        <!-- Bright Fantasy Button Style -->
        <Style TargetType="Button" x:Key="BrightFantasyButton">
            <Setter Property="Foreground" Value="#FFF1D0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#E44C3A"/>
            <Setter Property="BorderBrush" Value="#FFC857"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFC857" BlurRadius="18" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFC857"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF8303" BlurRadius="30" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#802400"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B84332"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#B84332" BlurRadius="40" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFE7D6"/>
                                <Setter Property="Foreground" Value="#C1A478"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Style: Gold with bright glow -->
        <Style TargetType="TextBlock" x:Key="BrightFantasyTitle">
            <Setter Property="FontFamily" Value="Georgia, serif"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="38"/>
            <Setter Property="Foreground" Value="#FFB800"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF6F00" BlurRadius="12" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Streak Label Style -->
        <Style TargetType="TextBlock" x:Key="BrightFantasyLabel">
            <Setter Property="FontFamily" Value="Georgia, serif"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#FF6F00"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFA500" BlurRadius="8" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox" x:Key="BrightFantasyListBox">
            <Setter Property="Background" Value="#FFF0DC"/>
            <Setter Property="Foreground" Value="#5B2E01"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#FFB800"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="⚔️ LinkUp Adventure"
                   Style="{StaticResource BrightFantasyTitle}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Streak -->
        <TextBlock x:Name="StreakLabel" Grid.Row="1"
                   Style="{StaticResource BrightFantasyLabel}"
                   HorizontalAlignment="Center" Margin="0,0,0,20"
                   Text="🔥 Streak: 0 days"/>

        <!-- Config List -->
        <ListBox x:Name="ConfigList" Grid.Row="2"
                 Style="{StaticResource BrightFantasyListBox}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button x:Name="LaunchButton" Content="🗡️ Launch" Style="{StaticResource BrightFantasyButton}"/>
            <Button x:Name="PomodoroButton" Content="🔮 Pomodoro" Style="{StaticResource BrightFantasyButton}"/>
            <Button x:Name="ExitButton" Content="🐉 Exit" Style="{StaticResource BrightFantasyButton}"/>
        </StackPanel>
    </Grid>
</Window>
